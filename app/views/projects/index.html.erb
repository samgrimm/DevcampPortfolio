<h1>Projects</h1>

<%= link_to "Add New Project", new_project_path %>

<% @projects.each do |project| %>
  <p> <%=link_to project.title, portfolio_show_path(project) %>  </p>
  <p> <%=project.subtitle %>  </p>
  <p> <%=project.body %>  </p>
  <p> <%=image_tag project.thumb_image unless project.thumb_image.nil? %>  </p>
  <p><%= link_to 'Edit', edit_project_path(project) %></p>
  <p><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></p>
<% end %>
