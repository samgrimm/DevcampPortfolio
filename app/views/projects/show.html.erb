<div class="container project-container">
  <div class="row">
    <div class="col-md-7">
      <%=image_tag project_img(@project.main_image, 'main'), width: '100%' %>
    </div>
    <div class="col-md-5">
      <h1> <%=@project.title %>  </h1>
      <hr>
      <em> <%=@project.subtitle %>  </em>
      <p> <%=@project.body %>  </p>
      <hr>
      <h3><%= t('.tech_used')%></h3>
      <% @project.technologies.each do |tech| %>
        <p><%=tech.name %></p>
      <% end %>
      <% if logged_in?(:site_admin)%>
        <p><%= link_to fa_icon('pencil-square-o'), edit_project_path(id: @project.id, locale: I18n.locale) %></p>
        <p><%= link_to fa_icon('trash'), project_path(id: @project.id, locale: I18n.locale), method: :delete, data: { confirm: 'Are you sure?' } %></p>
      <% end %>

    </div>
  </div>
</div>
