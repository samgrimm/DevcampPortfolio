
<% if @project.errors.any? %>
  <% @project.errors.full_messages.each do |error| %>
    <%= alert_generator error %>
  <% end %>
<% end %>
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :title , t('.title')%>
      <%= f.text_field :title , class:"form-control"%>
    </div>

    <div class="form-group">
      <%= f.label :subtitle, t('.subtitle') %>
      <%= f.text_field :subtitle , class:"form-control"%>
    </div>
    <div class="form-group">
      <label class="btn btn-primary">
        <%= t('.main_image')%> <%= f.file_field :main_image , style: 'display:none;'%>
      </label>
    </div>
    <div class="form-group">
      <label class="btn btn-primary">
        <%= t('.thumb_image')%><%= f.file_field :thumb_image , style: 'display:none;'%>
      </label>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :body,t('.body') %>
      <%= f.text_area :body , class:"form-control", rows: 14 %>
    </div>

  </div>

  <hr>
  <div class="col-md-12">
    <h2><%= t('.languages')%></h2>
    <div class="form-group">
      <%= f.radio_button :language, 'english' %>
      <%= f.label :language, t(".english")%>

      <%= f.radio_button :language, 'portuguese' %>
      <%= f.label :language, t(".portuguese")%>
    </div>


    <h2><%= t('.technologies')%></h2>
    <div>
      <%= f.fields_for :technologies do |tech_form| %>
        <%= render 'technology_fields', f: tech_form %>
      <% end %>
      <div class="">
        <%= link_to_add_association t('.add_tech'), f, :technologies %>
      </div>
    </div>


    <div class="form-group">
      <%= f.submit class:"btn btn-primary"%>
    </div>
  </div>
</div>
