
<%= form_for(@project) do |f| %>
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title , class:"form-control"%>
    </div>

    <div class="form-group">
      <%= f.label :subtitle %>
      <%= f.text_field :subtitle , class:"form-control"%>
    </div>
    <div class="form-group">
      <label class="btn btn-primary">
        Upload a main image file <%= f.file_field :main_image , style: 'display:none;'%>
      </label>
    </div>
    <div class="form-group">
      <label class="btn btn-primary">
        Upload a thumb image file <%= f.file_field :thumb_image , style: 'display:none;'%>
      </label>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body , class:"form-control", rows: 14 %>
    </div>

  </div>

  <hr>
  <div class="col-md-12">

    <h2>Technologies used:</h2>
    <div>
      <%= f.fields_for :technologies do |tech_form| %>
        <%= render 'technology_fields', f: tech_form %>
      <% end %>
      <div class="">
        <%= link_to_add_association 'Add Technology', f, :technologies %>
      </div>
    </div>


    <div class="form-group">
      <%= f.submit class:"btn btn-primary"%>
    </div>
  </div>
</div>
<% end %>
