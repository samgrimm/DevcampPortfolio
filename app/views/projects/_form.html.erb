
<%= form_for(@project) do |f| %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="field">
    <%= f.label :main_image %>
    <%= f.text_field :main_image %>
  </div>
  <div class="field">
    <%= f.label :thumb_image %>
    <%= f.text_field :thumb_image %>
  </div>

  <ul>
    <%= f.fields_for :technologies do |tech_form| %>
      <li><%= tech_form.label :name %>
       - <%= tech_form.text_field :name %></li>
    <% end %>
  </ul>



  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
