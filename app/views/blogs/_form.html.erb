<%= form_for(blog) do |f| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Samantha Cabral Portfolio", sticky: false) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.text_field :title, class:"form-control", placeholder: "Title" %>
  </div>

  <div class="form-group">
    <%= f.text_area :body, rows: 15, class:"form-control" , placeholder: "Body"%>
  </div>

  <div class="form-group">
    <%= f.submit class:"btn btn-primary" %>
  </div>
<% end %>
