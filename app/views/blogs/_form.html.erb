<%= form_for(blog) do |f| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error| %>
      <%= alert_generator error %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.text_field :title, class:"form-control", placeholder: "Title" %>
  </div>

  <div class="form-group">
    <%= f.label :topic_id %>
    <%= f.collection_select(:topic_id, Topic.all, :id, :title, {class:"form-control"})  %>
  </div>

  <div class="form-group">
    <%= f.text_area :body, rows: 15, class:"form-control" , placeholder: "Body"%>
  </div>

  <div class="form-group">
    <%= f.radio_button :status, 'draft' %>
    <%= f.label :status, 'Draft'%>

    <%= f.radio_button :status, 'published' %>
    <%= f.label :status, 'Publish'%>
  </div>

  <div class="form-group">
    <%= f.submit class:"btn btn-primary" %>
  </div>
<% end %>
