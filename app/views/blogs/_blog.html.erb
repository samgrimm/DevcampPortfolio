<div class="blog-post">
  <h2 class="blog-post-title"><%= link_to blog.title.upcase, blog_path(blog) %></h2>
  <p class="blog-post-meta">Published <%= distance_of_time_in_words(blog.created_at, Time.now) %> ago</p>
  <% if logged_in?(:site_admin) %>
    <nav class="breadcrumb blogcrumb">
      <%= render 'shared/blog_edit', blog: blog %>
    </nav
  <% end %>
  <p><%= truncate(blog.body, length: 500) %> <%=link_to "Read more", blog_path(blog) %></p>

</div><!-- /.blog-post -->
