<div class="card-deck skills">
  <% @skills.each do |skill| %>
  <div class="card text-center skill">
    <%= fa_stacked_icon "#{skill.badge} inverse", base: "circle",class: "fa-3x" %>
    <br>
    <h4><%= skill.title %></h4>

    <div
      class="progress-bar bg-warning"
      role="progressbar"
      aria-valuenow="<%= skill.percent_utilized%>"
      aria-valuemax="100"
      style="width: <%= skill.percent_utilized %>%;"
    ></div>
    </div>
  <% end %>
</div>
