<div class="comment-card">
  <div class="card">
    <div class="card-block">
      <div class="row">
        <div class="col-md-2">
          <%= gravatar_helper comment.user %>
        </div>
        <div class="col-md-10">
          <div class="">
            <%= comment.content %>
          </div>
          <div class="comment-attribution">
            <%= t('.comment_by') %> <%= comment.user.name %>
             <%= distance_of_time_in_words(comment.created_at, Time.now) %> <%= t('.ago') %>.
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
