<div class="container">
  <h2>Messages Received</h2>
  <table class="table">
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>Message</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.email %></td>
        <td><%= contact.name %></td>
        <td><%= truncate(contact.message, length: 150) %><%=link_to fa_icon("plus"), contact_path(contact) %></td>
        <td><%= contact.status.upcase %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
